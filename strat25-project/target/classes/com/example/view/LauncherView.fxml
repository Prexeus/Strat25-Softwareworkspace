<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.LauncherController"
      alignment="CENTER" spacing="14" prefWidth="560" prefHeight="400">
    <padding><Insets topRightBottomLeft="20"/></padding>

    <fx:define>
        <ToggleGroup fx:id="modeGroup"/>
    </fx:define>

    <children>
        <Label text="Start Game" style="-fx-font-size:18; -fx-font-weight:bold;"/>

        <!-- Host/Slave -->
        <HBox spacing="10" alignment="CENTER_LEFT" maxWidth="520">
            <children>
                <RadioButton fx:id="hostModeBtn" text="Host" toggleGroup="$modeGroup" selected="true"/>
                <RadioButton fx:id="slaveModeBtn" text="Slave" toggleGroup="$modeGroup"/>
                <Label text="Host-IP:"/>
                <TextField fx:id="hostAddressField" promptText="z. B. 192.168.0.10" prefWidth="160" disable="true"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button fx:id="testConnBtn" text="Verbindung testen" disable="true"/>
                <Button fx:id="openSlaveBtn" text="Als Slave öffnen" disable="true"/>
            </children>
        </HBox>

        <Separator maxWidth="520"/>

        <!-- Neue Spielstand-Erstellung (Host) -->
        <HBox spacing="8" alignment="CENTER" maxWidth="520">
            <children>
                <TextField fx:id="saveNameField" promptText="Enter new save name…" prefWidth="260"/>
                <Button fx:id="newBtn" text="New Game"/>
            </children>
        </HBox>

        <!-- Vorhandene Saves (Host) -->
        <HBox spacing="8" alignment="CENTER" maxWidth="520">
            <children>
                <ComboBox fx:id="savesBox" promptText="Select existing save" prefWidth="260"/>
                <Button fx:id="refreshSavesBtn" text="↻"/>
                <Button fx:id="loadBtn" text="Load Game"/>
            </children>
        </HBox>

        <!-- Backups (Host) -->
        <HBox spacing="8" alignment="CENTER" maxWidth="520">
            <children>
                <ComboBox fx:id="backupsBox" promptText="Select backup of selected save" prefWidth="260"/>
                <Button fx:id="refreshBackupsBtn" text="↻"/>
                <Button fx:id="loadBackupBtn" text="Load Backup"/>
            </children>
        </HBox>
    </children>
</VBox>
