<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.GameController"
      alignment="CENTER" spacing="14" prefWidth="640" prefHeight="360">
    <padding>
        <Insets topRightBottomLeft="20"/>
    </padding>

    <children>
        <Label fx:id="gameNameLabel" style="-fx-font-size:18; -fx-font-weight:bold;"/>
        <Label fx:id="timeLabel" style="-fx-font-size:16;"/>

        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button fx:id="pauseBtn" text="Pause"/>
                <Button fx:id="resumeBtn" text="Resume"/>
                <Button fx:id="stopBtn" text="Stop"/>
            </children>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <children>
                <Label text="Speed:"/>
                <Button fx:id="slowerBtn" text="×0.5"/>
                <Button fx:id="normalBtn" text="×1.0"/>
                <Button fx:id="fasterBtn" text="×2"/>
                <Label fx:id="speedLabel"/>
            </children>
        </HBox>
    </children>
</VBox>
